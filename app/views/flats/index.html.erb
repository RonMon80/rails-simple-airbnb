<div class="container">
  <h1 class="h1-index p-4">All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card mb-4 d-flex flex-column" style="min-height: 350px;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text" style="max-height: 50px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -line-clamp: 3; -webkit-box-orient: vertical;"><%= flat.description %></p>
            <div class="d-flex justify-content-between align-items-center mt-auto">
              <div class="icons">
                <i class="fas fa-user-friends icon-spacing"></i> <%= flat.number_of_guests %>
                <i class="fas fa-euro-sign icon-spacing icon-group-spacing"></i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="card-footer text-center custom-card-footer">
            <%= link_to 'More info', flat_path(flat), class: 'custom-link' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>